<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  {% comment %} font awesome {% endcomment %}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  
   
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
</head>
<body>
  <style>
    main{
font-family: 'Roboto', sans-serif;
    }
    .cards-container{
      display: flex;

   
      justify-content: space-around;
    }

    .card{
      min-width: 300px;
      max-width: 350px;
    }
    .card-button{
      border: none;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 5px;
      padding: 10px 24px;
      font-family: 'Roboto', sans-serif;
      color: white;
    }
    .card-button-wrapper{

      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }

    .add-cart{
      background-color: #065c46 !important;
    }
    .view-products{
      background-color: #282630 !important;
    }
    form{
      display: flex;
      flex-direction: row;
      width: 100%;
    }
    

  </style>
  <main role="main">

    {{ content_for_layout }}
<div class="cards-container">

  {% for product in collections.all.products %}
    <div class="card">
      <img src="{{ product.featured_image.src | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}" width="" height="">
      <h2 class="card-title">{{ product.title }}</h2>
      <p  class="card-description">{{ product.description }}</p>
      <h3 class="card-price" > {{ product.price | money }}</h3>
      <div class="card-button-wrapper">
        <form action="/cart/add" method="post">
        <a href="{{ product.url }}" class="card-button view-products"><i class="fas fa-eye"></i> View Product </a>
        <div class="add-cart-wrapper">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
          <button type="submit" class="card-button add-cart">
            <i class="fas fa-shopping-cart"></i>

             Add to cart  </button>
        </div>
          {% comment %} view product {% endcomment %}


        </form>



      </div>

    </div>
    
  {% endfor %}





</div>
   

    {% form 'contact' %}
    {%  endform %}
  
    
  </main>
</body>
</html>
