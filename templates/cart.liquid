}


{% endstyle %}


<div class="cart">
    <div class="cart-header">
        <h1>Your Cart</h1>
    </div>
    <div class="cart-items">
       
         {% for item in cart.items %}
          <div class="cart-item">
                <img src="{{ item.image.src | img_url: 'medium' }}" alt="{{ item.image.alt }}" width="" height="">
                <h2 class="cart-item-title">{{ item.title }}</h2>
                <p  class="cart-item-description">{{ item.description }}</p>
                <h3 class="cart-item-price" > {{ item.price | money }}</h3>
                <div class="cart-item-button-wrapper">
                 <form action="/cart/change" method="post">
                      <input type="hidden" name="id" value="{{ item.variant.id }}" />
                      <input type="hidden" name="quantity" value="0" />
                      <button type="submit" class="cart-item-button remove-cart"><i class="fas fa-trash-alt"></i> Remove from Cart</button>
                 </form>
                </div>
          </div>
         {% endfor %}

         </div>

      
</div>